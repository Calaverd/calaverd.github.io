{
  "name": "calaverd-page",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean-cache": "rm -rf .parcel-cache",
    "clean-build": "rm -rf build",
    "clean": "npm run clean-cache && npm run clean-build",
    "pack": "npx parcel build ./src/*.pug ./src/post/*.pug ./src/post/drafts/*.pug --no-source-maps --no-cache --no-content-hash --detailed-report --dist-dir build",
    "purge-css": "npx postcss-cli ./build/*.css -r --no-map --verbose",
    "build": "npm run clean && npm run process-post && npm run pack && npm run purge-css",
    "process-post": "node process_post.js",
    "start": "parcel ./src/*.pug ./src/post/*.pug  ./src/post/drafts/*.pug  --port 3000 --open --watch-for-stdin --no-cache --dist-dir dev",
    "serve": "npm run process-post && npm run start"
  },
  "author": "Calaverd",
  "license": "MIT",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@mischnic/parcel-namer-preserve-structure": "^0.2.0",
    "@parcel/transformer-pug": "^2.8.3",
    "autoprefixer": "^10.4.14",
    "bulma": "^0.9.4",
    "htm": "^3.1.1",
    "parcel": "^2.8.3",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "preact": "^10.13.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Calaverd/calaverd.github.io.git"
  },
  "description": "",
  "devDependencies": {
    "jstransformer-markdown-it": "^3.0.0"
  }
}
